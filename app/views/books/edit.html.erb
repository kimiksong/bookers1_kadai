
<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<% if @book.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li>error</li>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
<% end %>
<td><%= link_to "Show", book_path(@book) %></td>
<span>
  <a href="/books">Back</a>
</span>